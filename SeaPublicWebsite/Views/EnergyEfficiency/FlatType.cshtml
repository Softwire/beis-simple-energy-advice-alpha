@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.FlatTypeViewModel
@{
    ViewBag.Title = "Flat type";
}

@section BeforeMain {
    @Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action("PropertyType_Get", "EnergyEfficiency", new {reference = Model.Reference}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("FlatType_Post", "EnergyEfficiency", new {reference = Model.Reference})" method="post" novalidate>
            
            @(Html.GovUkRadiosFor(m => m.FlatType,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <span class="govuk-caption-l govuk-!-margin-bottom-4">
                                       @(QuestionSection.YourHome.GetDisplayName())
                                   </span>
                                   <h1 class="govuk-fieldset__heading">
                                       What kind of flat do you have?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                hintOptions: new HintViewModel
                {
                    Html = @<text>
                               <details class="govuk-details" data-module="govuk-details">
                                   <summary class="govuk-details__summary">
                                       <span class="govuk-details__summary-text">
                                           Help me answer what kind of flat I have
                                       </span>
                                   </summary>
                                   <div class="govuk-details__text">
                                       <ul class="govuk-list govuk-list--bullet">
                                           <li>A top floor flat sits directly below the roof with no other dwelling above it</li>
                                           <li>A mid floor flat sits above another home or business, and below another home or business</li>
                                           <li class="govuk-!-margin-bottom-0">A ground floor flat is on the ground floor, typically street level, with no other dwelling or business below it</li>
                                       </ul>
                                   </div>
                               </details>
                            </text>
                }
            ))

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
            
        </form>
        
    </div>
</div>
