@model SeaPublicWebsite.Models.EnergyEfficiency.RecommendationViewModel

<h2 class="govuk-heading-m ">
    What you could save
</h2>

<p class="govuk-body">Loft insulation is expected to last <b>around @Model.UserRecommendation.Lifetime years</b></p>

<div class="govuk-grid-row govuk-!-margin-left-0 govuk-!-margin-bottom-7 govuk-!-margin-top-6">
    <div class="govuk-grid-column-full sea-yearly-savings govuk-!-margin-bottom-2">
        <span class="govuk-caption-m">This could save up to</span>
        <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
            £@Model.UserRecommendation.Saving a year
        </h3>
        <span class="govuk-caption-m">Which adds up to</span>
        <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
            £@Model.UserRecommendation.LifetimeSaving <span class="govuk-body">over the lifetime of the installation</span>
        </h3>
    </div>
    <div class="govuk-grid-column-full sea-install-costs">
        <span class="govuk-caption-m">This could cost</span>
        <h3 class="govuk-heading-l govuk-!-margin-bottom-1">
            £@Model.UserRecommendation.MinInstallCost - £@Model.UserRecommendation.MaxInstallCost
        </h3>
    </div>
</div>
