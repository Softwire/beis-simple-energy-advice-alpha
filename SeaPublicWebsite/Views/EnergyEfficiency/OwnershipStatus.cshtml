@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.OwnershipStatusViewModel
@{
    ViewBag.Title = "Ownership status";
}

@section BeforeMain {
    @Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action("Country_Get", "EnergyEfficiency", new {reference = Model.Reference}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("OwnershipStatus_Post", "EnergyEfficiency", new {reference =  Model.Reference})" method="post" novalidate>            
            @(Html.GovUkRadiosFor(m => m.OwnershipStatus,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <span class="govuk-caption-l govuk-!-margin-bottom-4">
                                       @(QuestionSection.Suitability.GetDisplayName())
                                   </span>
                                   <h1 class="govuk-fieldset__heading">
                                       Do you own your home?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                new HintViewModel
                {
                    Html = @<text>
                                <details class="govuk-details" data-module="govuk-details">
                                    <summary class="govuk-details__summary">
                                        <span class="govuk-details__summary-text">
                                            Why do we need to know this?
                                        </span>
                                    </summary>
                                    <div class="govuk-details__text">
                                        We need to know your circumstances so we can work if this service is suitable for you.
                                    </div>
                                </details>
                            </text>
                }
            ))

            @(Html.GovUkButton(new ButtonViewModel
            {
                Text = "Continue",
            }))
            
        </form>
        
    </div>
</div>
