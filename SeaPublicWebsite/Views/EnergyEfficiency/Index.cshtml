@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@{
    ViewBag.Title = "Energy Efficiency Questionnaire";
}

@section BeforeMain {
    @{
        var crumbs = new List<CrumbViewModel>
        {
            new CrumbViewModel
            {
                Text = "Home",
                Href = Url.Action("Index", "Home")
            },
            new CrumbViewModel
            {
                Text = "Energy Efficiency Questionnaire"
            }
        };
    }

    @(Html.GovUkBreadcrumbs(new BreadcrumbsViewModel
    {
        Crumbs = crumbs
    }))
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <h1 class="govuk-heading-xl">Energy Efficiency Questionnaire</h1>
        
        <p class="govuk-body">
            We're going to ask you some questions.
        </p>
        
        <p class="govuk-body">
            <a href="@Url.Action("AskForPostcode_Get", "EnergyEfficiency")" class="govuk-button" data-module="govuk-button">
                Continue
            </a>
        </p>
        
    </div>
</div>
