@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.CountryViewModel
@{
    ViewBag.Title = "Country";
}

@section BeforeMain {
    @Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action("OwnershipStatus_Get", "EnergyEfficiency", new {reference = Model.Reference}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("Country_Post", "EnergyEfficiency", new {reference = Model.Reference})" method="post" novalidate>
            
            @(Html.GovUkRadiosFor(m => m.Country,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <span class="govuk-caption-l govuk-!-margin-bottom-4">
                                       @(QuestionSection.Suitability.GetDisplayName())
                                   </span>
                                   <h1 class="govuk-fieldset__heading">
                                       Which country is your property located in?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                }
            ))

            @(Html.GovUkButton(new ButtonViewModel
            {
                Text = "Continue",
            }))
            
        </form>
        
    </div>
</div>
