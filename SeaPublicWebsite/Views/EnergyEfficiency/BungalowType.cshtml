@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.BungalowTypeViewModel
@{
    ViewBag.Title = "Bungalow type";
}

@section BeforeMain {
    @Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action("PropertyType_Get", "EnergyEfficiency", new {reference = Model.Reference}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("BungalowType_Post", "EnergyEfficiency", new {reference = Model.Reference})" method="post" novalidate>
            
            @(Html.GovUkRadiosFor(m => m.BungalowType,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <span class="govuk-caption-l govuk-!-margin-bottom-4">
                                       @(QuestionSection.YourHome.GetDisplayName())
                                   </span>
                                   <h1 class="govuk-fieldset__heading">
                                       What kind of bungalow do you have?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                itemHintOptions: new Dictionary<BungalowType?, HintViewModel>
                {
                    {
                        BungalowType.Detatched,
                        new HintViewModel
                        {
                            Text = "A detached house does not share any of its walls with another house or building"
                        }
                    },
                    {
                        BungalowType.SemiDetatched,
                        new HintViewModel
                        {
                            Text = "A semi-detached house is attached to one other house or building"
                        }
                    },
                    {
                        BungalowType.Terraced,
                        new HintViewModel
                        {
                            Text = "A mid-terrace house sits in the middle with a house or building on each side"
                        }
                    },
                    {
                        BungalowType.EndTerrace,
                        new HintViewModel
                        {
                            Text = "An end-terrace house sits at the end of a row of similar houses with one house attached to it"
                        }
                    },
                }
            ))

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
            
        </form>
        
    </div>
</div>
