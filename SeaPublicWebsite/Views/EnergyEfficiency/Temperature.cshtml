@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.TemperatureViewModel
@{
    ViewBag.Title = "Temperature";
}

@section BeforeMain {
    @Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = @Url.Action("Index", "EnergyEfficiency"),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">                
        <form action="@Url.Action("Temperature_Post", "EnergyEfficiency")" method="post" novalidate>
            @{
                var knowsThermostatTemp =
                    new Dictionary<ThermostatTemperatureKnown?, Func<object, object>>
                    {
                        {
                            ThermostatTemperatureKnown.Yes,
                            @<text>
                                @(Html.GovUkTextInputFor(m => m.Temperature, classes:"govuk-input--width-2"))
                            </text>
                        }
                    };
            }

            @(Html.GovUkRadiosFor(m => m.ThermostatTemperatureKnown, 
                fieldsetOptions: new FieldsetViewModel
                    {
                        Legend = new LegendViewModel
                        {
                            Html = @<text>
                                       <span class="govuk-heading-m govuk-!-margin-bottom-4">
                                           @Model.Section.GetDisplayName()
                                       </span>
                                       <h1 class="govuk-fieldset__heading">
                                           @Model.Title
                                       </h1>
                                    </text>,
                            Classes = "govuk-fieldset__legend--l"
                        }
                    },
                    new HintViewModel
                    {
                        Html = @<text>
                                    <details class="govuk-details" data-module="govuk-details">
                                        <summary class="govuk-details__summary">
                                            <span class="govuk-details__summary-text">
                                                Why do we need to know this?
                                            </span>
                                        </summary>
                                        <div class="govuk-details__text">
                                            We need to know your circumstances so we can work if this service is suitable for you.
                                        </div>
                                    </details>
                                </text>
                    },    
                    conditionalOptions: knowsThermostatTemp))

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
        </form>
    </div>
</div>
