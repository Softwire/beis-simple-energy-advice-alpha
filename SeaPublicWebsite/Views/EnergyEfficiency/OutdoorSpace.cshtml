@using GovUkDesignSystem
@using GovUkDesignSystem.GovUkDesignSystemComponents
@using SeaPublicWebsite.Helpers
@using SeaPublicWebsite.Models.EnergyEfficiency.QuestionOptions
@model SeaPublicWebsite.Models.EnergyEfficiency.OutdoorSpaceViewModel
@{
    ViewBag.Title = "Outdoor space";
}

@section BeforeMain {
    @Html.GovUkBackLink(new BackLinkViewModel
    {
        Text = "Back",
        Href = Model.Change
            ? @Url.Action("AnswerSummary", "EnergyEfficiency", new {reference = Model.Reference})
            : @Url.Action("GlazingType_Get", "EnergyEfficiency", new {reference = Model.Reference}),
        
        // Note: some of the "Back" links in this journey can't use the default browser behaviour
        //  so we should control all of them explicitly
        OverrideWithJavascript = false
    })
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        
        <form action="@Url.Action("OutdoorSpace_Post", "EnergyEfficiency", new {reference = Model.Reference, change = Model.Change})" method="post" novalidate>
            
            @(Html.GovUkRadiosFor(m => m.HasOutdoorSpace,
                fieldsetOptions: new FieldsetViewModel
                {
                    Legend = new LegendViewModel
                    {
                        Html = @<text>
                                   <span class="govuk-caption-l govuk-!-margin-bottom-4">
                                       @(QuestionSection.YourHome.GetDisplayName())
                                   </span>
                                   <h1 class="govuk-fieldset__heading">
                                       Do you have outdoor space?
                                   </h1>
                                </text>,
                        Classes = "govuk-fieldset__legend--l"
                    }
                },
                hintOptions: new HintViewModel
                {
                    Html = @<text>
                               <details class="govuk-details govuk-!-margin-bottom-3" data-module="govuk-details">
                                   <summary class="govuk-details__summary">
                                       <span class="govuk-details__summary-text">
                                           Why do we need this?
                                       </span>
                                   </summary>
                                   <div class="govuk-details__text">
                                       Having outside space helps us determine whether your home may be suitable for a heat pump.
                                   </div>
                               </details>
                               <details class="govuk-details" data-module="govuk-details">
                                   <summary class="govuk-details__summary">
                                       <span class="govuk-details__summary-text">
                                           Help me decide if I have any outside space
                                       </span>
                                   </summary>
                                   <div class="govuk-details__text">
                                       <p class="govuk-body">
                                           If you have any garden or land adjacent to your home that you own,
                                           then you have some outside space.
                                       </p>
                                       <p class="govuk-body">
                                           If you don’t have any garden or land adjacent to your home,
                                           or you do but it is shared with neighbours or you don’t own it,
                                           then you do not have any outside space.
                                       </p>
                                   </div>
                               </details>
                            </text>
                }
            ))

            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
            
        </form>
        
    </div>
</div>
